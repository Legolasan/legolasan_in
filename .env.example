# Database
DATABASE_URL="postgresql://user:password@localhost:5432/portfolio?schema=public"

# NextAuth.js
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="your-nextauth-secret-generate-with-openssl-rand-base64-32"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# OpenAI (for chatbot)
OPENAI_API_KEY="sk-your-openai-api-key"

# EmailJS (contact form) - these are public keys
NEXT_PUBLIC_EMAILJS_SERVICE_ID="your-emailjs-service-id"
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID="your-emailjs-template-id"
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY="your-emailjs-public-key"

# Feature Flags
# Resume Download - Controls resume download button visibility
NEXT_PUBLIC_ENABLE_RESUME_DOWNLOAD="true"

# Services Page - Controls services page and navigation link visibility
NEXT_PUBLIC_ENABLE_SERVICES="true"
